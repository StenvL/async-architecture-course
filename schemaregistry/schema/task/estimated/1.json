{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "tasks.estimated.v1",
  "description": "json schema for tasks estimated event (version 1)",
  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "reward": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "reward",
        "timestamp"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "type": "string" },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}
